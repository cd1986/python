# Example 1 (Original)
x = 1
y = 20
if x > 5:
    x = x + 5
    y = x - 2
    x = y + 2
else:
    x = x + 1
    y = y + 2
print("Example 1:", x, y)

# Example 2
a = 10
b = 5
if a < b:
    a += 2
    b += 3
else:
    a -= 2
    b *= 2
print("Example 2:", a, b)


# Example 3
x = 3
y = 7
if x * 2 > y:
    x = x * 2
    y = y - 1
else:
    y = y + 3
    x = y - x
print("Example 3:", x, y)



# Example 4
p = 12
q = 3
if p / q == 4:
    p = p + q
else:
    p = p - q
print("Example 4:", p, q)

# Example 5
x = 11
y = 8
if x % 2 == 0:
    y = y + 1
else:
    x = x + 2
    y = y - 2
print("Example 5:", x, y)


