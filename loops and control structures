for i in [1,2,3,4,5]:
    print("*"*(i))
for i in [1,2,3,4,5]:
    print("*"*(6-i))
for i in range(1,6):
    print(i,end=',')
for i in range(1,6,2):
    print(i,end=',')
for i in range(1,50,2):
    print(i,end=',')
for i in range(50,1,-2):
    print(i,end=',')
for i in range(1,6):
    print((6-i)*" "+i*"$")





















